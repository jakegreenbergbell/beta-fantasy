<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Beta Fantasy</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top:80px;
            word-wrap:break-word;
              }
        .btn-sm{
              margin-top: 4px;
        }
        #climbers{
          position: absolute;
          top: 250px;
          left: 150px;
          border-style: solid;
          border-color: white;
        }
        .climberRow{
          padding:15px;
          border-style: solid;
          border-color: white;
        }
        .climberTableCell{
          padding:15px;
          text-align: center;
        }
        h1{
          position:absolute;
          top: 100px;
          font-size: 48px;
          text-shadow: 2px 2px #ff0000;
        }

        #header{
          position: absolute;
          top: 10px;
          border-top: none;
          width: 61%;
        }
        .header-buttons{
          font-size: 24px;
          top: 34px;
          position: absolute;
          color: white;
          border-radius: 4px;
          transition: 0.65s;
          background-color: #302F30;
          }
        .header-buttons:hover{
          color: #ad282a;
          border-radius: 25px;
          background-color: white;
        }
        img{
          height:100%;
          width:100%;
          opacity: 0.5;
          position: absolute;
          z-index: -1;
          top: 0px;
        }
        .plusButton{
          border-radius: 8px;
          background-color: lightblue;
          color: white;
          }
          .scrollable{
            max-height: 300px;
            overflow: scroll;
          }
        .text-danger  {
          margin: 0px;
        }
        .well{
          position: absolute;
          right: 10px;
          top: 30px;
          padding: 10px;
          background-color: transparent;
          max-width: 250px;
         border: 4px solid #e3e3e3;
       }

    </style>
</head>
<body>

  <img src="images/background.jpg" height="100%" width="100%" id="background">


<div class="container">
  <table class="table table-dark" id="header">
 <tr>
    <td style="border-top: none"><form method="get" action="/myTeam">
              <input type="submit" value="My Team" class="header-buttons"></form></td>
    <td style="border-top: none"><button class="header-buttons">View Climbers</button></td>
    <td style="border-top: none"><button class="header-buttons">Groups</button></td>
  </tr>
</table>

        <h1>Welcome to Beta Fantasy</h1>

</div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <% if(user.google.token == undefined){ var email = user.local.email %>
            <div class="well">
                <h3><span class="fa fa-user"></span> Signed In</h3>

                    <p>
                        <strong>username</strong>: <%= user.local.email %><br>
                        <a href="/logout" class="btn btn-default btn-sm">Logout</a><br>
                    </p>

            </div>
        <% } %>

    <!-- GOOGLE INFORMATION -->
    <% if (user.google.token !== undefined){  var email = user.google.email %>

        <div class="well">
            <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>

                <p>
                    <strong>email</strong>: <%= user.google.email %><br>
                    <strong>name</strong>: <%= user.google.name %>
                    <a href="/logout" class="btn btn-default btn-sm">Logout</a><br>
                </p>

        </div>
<% } %>
<div>
  <table id="climbers">
    <tr class="climberRow">
      <th class="climberTableCell">First name</th>
      <th class="climberTableCell">Last name</th>
      <th class="climberTableCell">Tier</th>
      <th class="climberTableCell">Nationality</th>
      <th class="climberTableCell">2018 ranking</th>
      <th class="climberTableCell">Add</th>
    </tr>

    <%for(var i = 0; i<climber.length;i++){ %>
     <tr class="climberRow scrollable">
        <td class="climberTableCell"><%= climber[i].firstname %></td>
        <td class="climberTableCell"><%= climber[i].lastname %></td>
        <td class="climberTableCell"><%= climber[i].tier %></td>
        <td class="climberTableCell"><%= climber[i].nationality %></td>
        <td class="climberTableCell"><%= climber[i].rank %></td>
        <td><form method="post" action="/addClimberToTeam">
          <input type="hidden" name="climberId" value="<%= climber[i]._id %>">
          <input type="hidden" name="tier" value="<%= climber[i].tier %>">
          <input type="hidden" name="currentUsername" value="<%= email %>">
          <input class="plusButton"type="submit" value="+"></form></td>
      </tr>
<% } %>


</table>

</div>
</body>
</html>
